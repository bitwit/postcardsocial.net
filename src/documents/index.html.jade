div.showcase
	div.container
		div.display-wrapper
			div.example-display
				img.phone-display(src="/images/iphone-display@2x.png")
				video.video-phone-display(width="320", height="568", preload="auto", autoplay, loop)
					source(src="/videos/postcard-demo.mp4", type="video/mp4")
		p.slogan
			span.value Write Once,
				br
				| Share Everywhere.
				br
				| Even Your Own Website.
			br
			br
			strong.value Direct your traffic

		a.download-button(href="#") Download on the App Store

div.features-section
	div.container
		ul.features
			- for (var i = 0; i < 6; ++i) {
				li.feature
					div.heading
						img.icon(src="images/#{features[i].icon}")
						h5.title
							span.value!=features[i].title
					p.description!=features[i].description
			- }

div.coming-soon
	h2.coming-soon
		span.title Coming February 2014
	h4.signup
		span.title Sign up to be notified when Postcard is released
	form.notify-big(name="mc-embedded-subscribe-form", action="#{site.mailchimpListUrl}", method="POST")
		input.email(type="email", name="EMAIL", placeholder="your@email.com")
		button.submit
			span.title Notify Me

