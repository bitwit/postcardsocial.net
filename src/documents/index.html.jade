div.showcase
	div.container
		p.slogan
			span.value Turn your WordPress website into a
				br
				| personal social network or micro-blog
	img.example-display(src="images/showcase.png")

div.features-section
	div.container
		ul.features
			- for (var i = 0; i < 6; ++i) {
				li.feature
					div.heading
						img.icon(src="images/#{features[i].icon}")
						h5.title
							span.value!=features[i].title
					p.description!=features[i].description
			- }

div.coming-soon
	h2.coming-soon
		span.title Coming soon to a website&nbsp;
			em.owned owned by you
	h4.signup
		span.title Sign up to be notified when Postcard is released
	form.notify-big(name="mc-embedded-subscribe-form", action="#{site.mailchimpListUrl}", method="POST")
		input.email(type="email", name="EMAIL", placeholder="your@email.com")
		div.beta-opt-in
			input.beta(type="checkbox", value="yes", name="BETA")
			label.beta(for="beta")
				span.value I'm interested
					br
					| in beta testing
		button.submit
			span.title Notify Me

div.blog-cta
	h4.blog
		span.title
			a.blog(target="_blank", href="http://blog.postcardsocial.net") Visit the blog
			| &nbsp;for more info
			br
			br
			| - or -
			br
			br
			| Follow Postcard updates on Twitter
			br
			a.twitter-name(target="_blank",href="https://www.twitter.com/postcardsocial") @postcardsocial